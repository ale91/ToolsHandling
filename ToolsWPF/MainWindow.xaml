<Window x:Class="ToolsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolsWPF"        
        xmlns:viewModel="clr-namespace:ToolsWPF.ViewModel" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Seleziona" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20" />
            <Button Content="Tools" Width="150" Height="40" Command="{Binding OpenToolsCommand}" Margin="0,0,0,10" />
            <Button Content="Machines" Width="150" Height="40" Command="{Binding OpenMachinesCommand}" />
        </StackPanel>
        
    </Grid>
</Window>
